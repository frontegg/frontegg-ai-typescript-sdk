{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types/"],
    "inlineSources": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/index.ts"]
}
