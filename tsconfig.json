{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types", "node_modules/@types/"],
    "inlineSources": true,
    "paths": {
      "@frontegg/ai-sdk/*": ["./src/*"],
      "@frontegg/client/dist/src/config/": ["./node_modules/@frontegg/client/dist/src/config/index.js"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/index.ts"]
}
